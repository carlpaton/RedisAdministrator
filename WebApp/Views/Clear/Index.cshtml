@model InfoViewModel

@{
    ViewData["Title"] = "Clear Redis Server";
}
<h1>@ViewData["Title"]</h1>

<p>
    <code>WARNING</code> this will clear ALL RECORDS using the <code>flushall</code> command.
</p>

<form asp-action="Clear" asp-controller="Clear" method="post">
    <div class="form-group row">
        <div class="col-sm-2 col-form-label">
            Clear all records
        </div>
        <div class="col-sm-10">
            <input type="submit" class="btn btn-danger" value="Clear" onclick="return confirm('WARNING! this will clear ALL RECORDS!\nAre you sure?')" />
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-2 col-sm-10">
            <partial name="~/Views/Shared/_TempDataMessage.cshtml" />
        </div>
    </div>
</form>

<h2>References</h2>
<ul>
    <li><a href="https://redis.io/commands/flushall" target="_blank">Flushall</a></li>
</ul>
