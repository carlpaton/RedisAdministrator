@model DeleteViewModel

@{
    ViewData["Title"] = "Delete";
}
<h1>@ViewData["Title"]</h1>

<p>
    <code>WARNING</code> this will delete the given key using the <code>del</code> command.
</p>
<p>
    Example key `1:2:seed_string`.
</p>

<form asp-action="Index" asp-controller="Delete" method="post">
    <div class="form-group row">
        <label asp-for="KeyToDelete" class="col-sm-2 col-form-label"></label>

        <div class="col-sm-10">
            <input asp-for="KeyToDelete" class="form-control" />
            <span asp-validation-for="KeyToDelete" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-2 col-sm-10">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-2 col-sm-10">
            <partial name="~/Views/Shared/_TempDataMessage.cshtml" />
        </div>
    </div>
</form>

<h2>Example</h2>

<pre>
<code>
        &gt; SET key1 "Hello"
        OK
        &gt; SET key2 "World"
        OK
        &gt; DEL key1 key2 key3
        (integer) 2
    </code>
</pre>

